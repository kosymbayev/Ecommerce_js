* 
    box-sizing: border-box;

body 
    margin: 0;
    padding: 0;
    overflow-x: hidden;
    font-family: "montserrat", sans-serif
    line-height: 1.25;

h2
    text-align center
    font-weight: 600;
    margin 0
    padding 30px 20px
    text-transform: uppercase

a
    text-decoration none
    color var(--text_color)

.container
    max-width var(--container-width)
    padding 0 20px
    margin 0 auto


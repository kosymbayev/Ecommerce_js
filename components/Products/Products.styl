// ALL PRODUCTS PAGE
.all_products
    .container
        display: grid
        grid-template-columns repeat(4, 1fr)
        grid-gap 20px
        @media screen and (max-width: 1000px) and (min-width: 701px)
            grid-template-columns repeat(3, 1fr)
        @media screen and (max-width: 700px) and (min-width: 461px)
            grid-template-columns repeat(2, 1fr)
        @media screen and (max-width: 460px)
            grid-template-columns 1fr

// PRODUCT ITEM
.all_products
.catalog
    position relative
    .product
        display: flex
        flex-direction: column
        justify-content: flex-end
        padding: 25px 20px
        background-color: #fff
        box-shadow: 0px 0px 20px #d9d8d8;
        border-radius var(--border_radius)

    .product_name
        margin-bottom auto
        font-weight bold
        height: 3.75em;
        overflow: hidden;
        text-overflow: ellipsis;
        display: -webkit-box !important;
        -webkit-box-orient: vertical;
        -webkit-line-clamp: 3;

    .product_img
        width 100%
        //height 270px
        object-fit: contain
        margin-top 15px

    .product_price
        margin-top 15px
        color #808080

    .product_btn
        margin-top 15px
        padding 10px 15px
        border 1px solid #808080
        border-radius var(--border_radius)
        cursor pointer
        outline none
        background none
        font-family inherit
        font-size inherit

    .product_btn.active
        border 1px solid transparent
        background: #555;
        color: #fff;

    // PAGINATION
    .pagination
        max-width: var(--container-width);
        padding: 0 20px;
        margin: 10px auto;
        display flex
        gap 10px
        .page
            display: inline-block;
            border: 1px solid #555;
            width: 40px;
            height: 40px;
            text-align: center;
            line-height: 40px;
            cursor: pointer;
            &.active
            &:hover
            &:active
                background #555
                color #fff

// CATALOGS
.catalog
    @media screen and (max-width: 480px) 
        padding-bottom: 20px;
    
// SWIPER
.catalog 
    &.swiper
    .swiper
    .swiper-container
        overflow: visible

    @media screen and (min-width: 481px)
        .swiper-pagination
            top: -54px;
            bottom: unset;
            left: unset;
            right: 0;
            width auto

    @media screen and (max-width: 480px)
        .swiper-pagination
            top: unset;
            bottom: -30px;